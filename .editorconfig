root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{cpp,cc,h,hpp,inc,rc,as,json,cfg,toml,md,txt,cmake}]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true

[*.sh]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yaml,yml,fnt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
